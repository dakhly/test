<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="bench_client_tree" model="ir.ui.view">
        <field name="name">bench.client.tree</field>
        <field name="model">bench.client</field>
        <field name="arch" type="xml">
            <tree>
                <field name="client_name"/>
                <field name="contract_value"/>
                <field name="ref"/>
                <field name="contract_type"/>
                <field name="contract_start"/>
                <field name="account_team_leader"/>
                <field name="contract_end"/>
            </tree>
        </field>
    </record>

    <record id="bench_client_search" model="ir.ui.view">
        <field name="name">bench.client.search</field>
        <field name="model">bench.client</field>
        <field name="arch" type="xml">
            <search>
                <field name="client_name" filter_domain="['|', ('client_name', 'ilike', self), ('ref', 'ilike', self)]"/>
                <field name="contract_value"/>
                <field name="ref"/>
                <field name="contract_type"/>
                <field name="contract_start"/>
                <field name="account_team_leader"/>
                <field name="contract_end"/>
                <filter name="filter_bookkeeping" string="Bookkeeping" domain="[('contract_type', '=' , 'bookkeeping')]"/>
                <separator/>
                <filter name="filter_odoo" string="odoo" domain="[('contract_type', '=' , 'odoo')]"/>
                <filter name="filter_archived" string="Archived" domain="[('active', '=' , False)]"/>
                <group expand="0" string="Group By">
                        <filter name="group_contract_type" string="Contract Type" domain="[]" context="{'group_by': 'contract_type'}"/>
                        <filter name="group_account_team_leader" string="Account Team Leader" domain="[]" context="{'group_by': 'account_team_leader'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="bench_client_form" model="ir.ui.view">
            <field name="name">bench.client.form</field>
            <field name="model">bench.client</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="client_name"/>
                                <field name="contract_value"/>
                                <field name="ref"/>
                            </group>
                            <group>
                                <field name="contract_type"/>
                                <field name="contract_start"/>
                                <field name="contract_end"/>
                                <field name="account_team_leader"/>
                                <field name="active" invisible="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
     </record>

    <record id="action_bench_client" model="ir.actions.act_window">
            <field name="name">Clients</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">bench.client</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new client
                </p>
            </field>
    </record>

    <menuitem id="menu_bench"
        name="Clients"
        action="action_bench_client"
        parent="menu_bench_master"
        sequence="0"/>

</odoo>
